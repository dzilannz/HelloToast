<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <!-- First Button (Toast) -->
    <Button
        android:id="@+id/button_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_label_toast"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF00FF"
        android:layout_marginEnd="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <!-- Second Button (Count) -->
    <Button
        android:id="@+id/button_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_label_count"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF00FF"
        android:layout_toEndOf="@id/button_toast"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp" />

    <!-- Third Button (Switch Page) -->
    <Button
        android:id="@+id/button_switch_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch Page"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF00FF"
        android:layout_toEndOf="@id/button_count"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp" />

    <!-- Fourth Button (Browser Page) -->
    <Button
        android:id="@+id/button_browser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_label_browser"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF00FF"
        android:layout_toEndOf="@id/button_switch_page"
        android:layout_alignParentTop="true" />

    <!-- Large TextView in the Center -->
    <TextView
        android:id="@+id/show_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="160sp"
        android:background="#FFFF00"
        android:gravity="center"
        android:text="@string/count_initial_value"
        android:layout_below="@id/button_toast"
        android:layout_marginTop="30dp" />

</RelativeLayout>
